  <td><%= @show_cat.first %></td>
</tr>
<tr>
  <td style="height:35px;"><b>Rating</b></td>
  <td>
    <% @restaurant.rating.to_i.times do  %>
    <span class="glyphicon glyphicon-star" style="color:#0272FF"></span>
    <% end %>
    <% @restaurant.blank_stars.times do %>
    <span class="glyphicon glyphicon-star-empty" style="color:#c9c9ff"></span>
    <% end %>
  </td>
</tr>
<tr>
  <td style="height:35px;"><b>Price</b></td>
  <td>
    <% @restaurant.price.size.times do %>
    <span class="glyphicon glyphicon-usd" style="color:#0272FF"></span>
    <% end %>
    <% @restaurant.blank_dollars.times do %>
    <span class="glyphicon glyphicon-usd" style="color:#c9c9ff"></span>
    <% end %>
  </td>
</tr>
<tr>
  <td style="height:35px;"><b>Hours</b></td>
  <td>
    <select name="my_html_select_box">
      <%= @rest_days_open.each_with_index do |name, index| %>
        <option><b><%= name %></b>&ensp;<%= @rest_time_open[index].insert(2, ':').to_time.strftime('%l:%M %P')%>&nbsp;-&nbsp;<%= @rest_time_closed[index].insert(2, ':').to_time.strftime('%l:%M %P')%></option>
      <% end %>
    </select>
  </td>
</tr>
<tr>
  <td style="height:35px;"><span class="glyphicon glyphicon-phone-alt" style="color:#0272FF"></span>&emsp;<a href="tel:<%= @restaurant.phone %>"><%= @restaurant.phone %></a></td>
  <td><span class="glyphicon glyphicon-globe" style="color:#0272FF"></span>&emsp;<a href="<%= @restaurant.restaurant_url %>">website</a></td>
</tr>
