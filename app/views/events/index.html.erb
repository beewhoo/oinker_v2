<p id="notice"><%= notice %></p>

<h1>Events</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Category</th>
      <th>Date</th>
      <th>Price</th>
      <th>Venue</th>
      <th>Location</th>
      <th>URL</th>
      <th>LAT</th>
      <th>Long</th>
      <th>API-id</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.name %></td>
        <td><%= event.category %></td>
        <td><%= event.date %></td>
        <td><%= event.price %></td>
        <td><%= event.venue %></td>
        <td><%= event.location %></td>
        <td><%= event.url %></td>
        <td><%= event.lat %></td>
        <td><%= event.long %></td>
        <td><%= event.api_id %></td>


        <td><%= link_to 'Show', event %></td>
        <td><%= link_to 'Edit', edit_event_path(event) %></td>
        <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Event', new_event_path %>
